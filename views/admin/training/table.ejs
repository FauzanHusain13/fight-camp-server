<table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
    <tr>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            No.
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Training
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Paket
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Aksi
        </th>
    </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
        <% for(let i = 0; i < training.length; i++) { %>
            <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                    <%= i + 1 %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <%= training[i].name %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-xs">
                    <div class="flex justify-between">
                        <% training[i].memberships.forEach(membership => { %>
                            <span class="text-white bg-red-600 p-2 rounded-lg font-semibold">
                                <%= membership.package %>
                            </span>
                        <% }) %>
                    </div>
                </td>    
                <td class="px-6 py-4 whitespace-nowrap">
                    <form action="/training/delete/<%= training[i]._id %>?_method=DELETE" method="POST" class="flex gap-1">
                        <a href="/training/edit/<%= training[i]._id %>" class="text-sm flex gap-1 bg-orange-500 text-white p-2">
                          <i class="bi bi-pencil"></i>
                          <p>edit</p>
                        </a>
                        <button class="text-sm bg-red-500 text-white p-2 flex gap-1">
                          <i class="bi bi-archive-fill"></i>
                          <p>delete</p>
                        </button>
                    </form>
                </td>
            </tr>
        <% } %>
    </tbody>
</table>