<table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
    <tr>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            No.
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Nama discount
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Potongan
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Kode discount
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Aksi
        </th>
    </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
        <% for(let i = 0; i < discount.length; i++) { %>
            <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                    <%= i + 1 %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <%= discount[i].discountName %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <%= discount[i].discount %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <%= discount[i].codeDiscount ? discount[i].codeDiscount : "-" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <form action="/discount/delete/<%= discount[i]._id %>?_method=DELETE" method="POST" class="flex gap-1">
                        <a href="/discount/edit/<%= discount[i]._id %>" class="text-sm flex gap-1 bg-orange-500 text-white p-2">
                          <i class="bi bi-pencil"></i>
                          <p>edit</p>
                        </a>
                        <button class="text-sm bg-red-500 text-white p-2 flex gap-1">
                          <i class="bi bi-archive-fill"></i>
                          <p>delete</p>
                        </button>
                    </form>
                </td>
            </tr>
        <% } %>
    </tbody>
</table>